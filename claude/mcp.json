{
    "mcpServers": {
        "serena": {
            "type": "stdio",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-i",
                "--network",
                "host",
                "-v",
                "/Users/stkhr/ghq:/workspaces/projects",
                "ghcr.io/oraios/serena:latest",
                "serena",
                "start-mcp-server",
                "--transport",
                "stdio",
                "--context",
                "ide-assistant",
                "--project",
                "/workspaces/projects"
            ],
            "env": {}
        },
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github@2025.4.8"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
            }
        },
        "chrome-devtools": {
            "command": "npx",
            "args": [
                "-y",
                "chrome-devtools-mcp@0.12.1"
            ]
        },
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp@2.1.0"
            ]
        },
        "playwright": {
            "command": "npx",
            "args": [
                "-y",
                "@executeautomation/playwright-mcp-server@1.0.12"
            ]
        }
    }
}
