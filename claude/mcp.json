{
    "mcpServers": {
        "serena": {
            "type": "stdio",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-i",
                "--network",
                "host",
                "-v",
                "/Users/stkhr:/workspaces/projects",
                "ghcr.io/oraios/serena:latest",
                "serena",
                "start-mcp-server",
                "--transport",
                "stdio",
                "--context",
                "ide-assistant",
                "--project",
                "/workspaces/projects"
            ],
            "env": {}
        },
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
            }
        },
        "chrome-devtools": {
            "command": "npx",
            "args": [
                "-y",
                "chrome-devtools-mcp@0.12.1"
            ]
        }
    }
}
